<match target="font">
  <test name="family" compare="contains">
    <string>Fira</string>
  </test>
  <!-- https://github.com/tonsky/FiraCode/wiki/How-to-enable-stylistic-sets -->
  <edit name="fontfeatures" mode="append">
    <string>zero</string>
    <string>onum</string>
    <string>ss04</string>
    <string>cv19</string>
    <string>cv23</string>
    <string>ss09</string>
    <string>ss06</string>
    <string>ss07</string>
    <string>ss10</string>
  </edit>
</match>
